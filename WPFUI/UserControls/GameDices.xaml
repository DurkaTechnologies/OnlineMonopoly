<UserControl x:Class="WPFUI.UserControls.GameDices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:uc="clr-namespace:WPFUI.UserControls">
	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<uc:GameDice Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="firstDice"></uc:GameDice>
		<uc:GameDice Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="secondDice"></uc:GameDice>
	</Grid>
</UserControl>
