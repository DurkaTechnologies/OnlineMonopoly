<UserControl x:Class="WPFUI.UserControls.GameDices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 DataContext="{Binding RelativeSource={RelativeSource Self}}"
			 xmlns:uc="clr-namespace:WPFUI.UserControls"
			 x:Name="UserControl">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<uc:GameDice Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="first"></uc:GameDice>
		<uc:GameDice Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="second"></uc:GameDice>
	</Grid>
</UserControl>
